class Solution {
    public boolean isAnagram(String s, String t) {
        int sc=s.length();
        int tc=t.length();
        if(sc!=tc){
            return false;
        }
        int count[]=new int[26];
        for(int i=0;i<sc;i++){
            count[s.charAt(i)-'a']++;
        }
        for(int i=0;i<tc;i++){
            count[t.charAt(i)-'a']--;
        }
        for(int i=0;i<count.length;i++){
            if(count[i]!=0){
                return false;
            }
        }
        return true;
    }
}
